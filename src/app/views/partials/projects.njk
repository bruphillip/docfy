<section id="main">
  <div class="container">
    <header>
      <h2>Meus projetos ({{ projects.length }})</h2>
      <div class="addon">
        <form action="/app/projects" method="POST">
          <input type="text" name="project" placeholder="Novo projeto">
          <button type="submit" class="btn">
            <img src="/img/plus.svg">
          </button>
        </form>
      </div>
    </header>

    <section id="content">
      <div class="project-list">
        {% for project in projects%}
          <a href="/app/dashboard/project/{{ project.id }}/description">{{ project.project }}</a>
        {% endfor %}
        </div>
      </section>
    </div>
  </section>
