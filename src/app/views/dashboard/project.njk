{% extends 'layouts/default.njk' %}

{% block body%}
  <div class="wrapper">
    {% include 'partials/header.njk' %}

    <section id="main">
      <div class="container">
        <header>
          <h2>{{ projects.project }}</h2>
          <div class="addon">
            <form method="POST" action="/app/dashboard/project/{{ projects.id }}/description?_method=DELETE">
              <button type="submit" class="btn btn-danger">Excluir projeto</button>
            </form>
          </div>
        </header>
        {% include 'partials/content.njk' %}
      </div>
    </section>
    <div class="modal" id="new-section">
      <form class="modal-content" method="POST" action="/app/dashboard/project/{{ projects.id }}/description/create">
        <input type="text" name="title" placeholder="Título da Seção">
        <div class="contnet-container">
          <textarea name="content" class="mde" placeholder="Conteúdo da Seção"></textarea>
        </div>

        <button type="submit">SALVAR SEÇÃO</button>
        <a href="#" data-modal-close="#new-section">CANCELAR</a>
      </form>
    </div>
  {% endblock %}
